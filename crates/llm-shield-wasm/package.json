{
  "name": "@llm-shield/wasm",
  "version": "0.1.0",
  "description": "LLM Shield security toolkit compiled to WebAssembly",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "llm_shield_wasm_bg.wasm",
    "llm_shield_wasm.js",
    "llm_shield_wasm.d.ts",
    "README.md"
  ],
  "keywords": [
    "llm",
    "security",
    "wasm",
    "webassembly",
    "rust",
    "prompt-injection",
    "toxicity",
    "ai-security"
  ],
  "author": "LLM Shield Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/llm-shield/llm-shield-rs"
  },
  "scripts": {
    "build": "wasm-pack build --target web --out-dir pkg",
    "build:nodejs": "wasm-pack build --target nodejs --out-dir pkg-node",
    "build:bundler": "wasm-pack build --target bundler --out-dir pkg-bundler",
    "test": "wasm-pack test --headless --chrome",
    "publish:npm": "wasm-pack publish"
  },
  "devDependencies": {
    "wasm-pack": "^0.12.1"
  }
}
